<Window x:Class="VNmanager.InvalidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNmanager"
        mc:Ignorable="d"
        Background="#272537"
        WindowStartupLocation="CenterScreen"
        BorderBrush="#d0d0d0"
        BorderThickness="1"
        WindowStyle="None"
        PreviewKeyUp="Window_PreviewKeyDown"
        ResizeMode="NoResize"
        Title="InvalidWindow" Height="150" Width="300">
    <Grid>
        <TextBlock Text="Invalid File"
                   Margin="5,10,0,0"
                   FontSize="15"
                   Style="{StaticResource GameTitleText}"/>
        
        <TextBlock Text="The dropped file is invalid. Drop correct file!"
                   Margin="5,30,0,0"
                   FontSize="10"
                   Style="{StaticResource GameTitleText}"/>

        <Button Content="OK"
                ClickMode="Release"
                Click="Button_Click"
                Style="{StaticResource OkButton}"
                FontSize="10"
                Height="30"
                Width="80"
                Margin="80,50,0,0">
        </Button>
    </Grid>
</Window>
